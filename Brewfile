# --- Core CLI Tools ---
brew "bat"              # cat replacement with syntax highlighting
brew "delta"            # git diff viewer with syntax highlighting
brew "fd"               # find replacement, fast and user-friendly
brew "fzf"              # fuzzy finder for files, history, etc.
brew "gh"               # GitHub CLI
brew "git"              # version control
brew "htop"             # interactive process viewer
brew "prettyping"       # prettier ping output
brew "ripgrep"          # grep replacement, very fast
brew "tmux"             # terminal multiplexer
brew "zoxide"           # smart cd replacement (z/zi)

# --- Development ---
brew "gcc"              # GNU compiler collection
brew "openssl@3"        # TLS/SSL toolkit
brew "opencode"         # AI coding assistant

# --- Media ---
brew "homebrew-ffmpeg/ffmpeg/ffmpeg"  # full ffmpeg (tap version, skip chromaprint to avoid circular dep)
brew "tesseract"        # OCR engine
brew "whisper-cpp"      # speech-to-text

# --- Other Tools ---
brew "mint"             # Swift package manager
brew "rclone"           # cloud storage sync

